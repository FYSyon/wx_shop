/* pages/index3/index3.wxss */
.contai{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
/*音乐符号图片*/
.music {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  z-index:999;
}
.music-img{
  height: 50rpx;
  width: 50rpx;
}
.target-list {
  width: 90%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center; 
  margin-top: 80rpx;
  color: #fff;
}
.rehearse-container {
  width: 90%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-radius: 15rpx;
  padding: 0 30rpx;
  background-color: #8baddd;
}
.rehearse-title {
  font-size: 30rpx;
}
.add-target {
  width: 90%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
  padding: 0 30rpx;
  background-color: #81cef8;
}
.add-target-one {
  margin: 50rpx 0;
}
.z1{
  margin-right: 65rpx;
  font-size: 34rpx;
}
.z2{
  font-size: 38rpx;
}
/*时间*/
.circle-container {
  width: 90%;
  height: 300rpx;
  position: relative;
}
.circle-outside {
  position: absolute;
  top: 50%;
  left: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 250rpx;
  height: 250rpx;
  border-radius: 125rpx;
  transform: translate(-125rpx,-125rpx);
  background-color: #cdf1e7;
}
.circle-inside {
  width: 210rpx;
  height: 210rpx;
  border-radius: 105rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #4bd1c8;
  color: #fff;
}
.circle-inside text:first-of-type{
  font-size: 45rpx;
}
.circle-text {
  font-size: 34rpx;
  margin-top: 10rpx;
  cursor: pointer;
}
.stop {
  position: absolute;
  top: 210rpx;
  right: 40rpx;
  width: 100rpx;
  height: 45rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 45rpx;
  background-color: #4bd1c8;
  color: #fff;
  font-size: 28rpx;    
}
.active {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .4);
}
/*任务栏*/
.taskbar{
  position: absolute;
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 70%;
  height: 700rpx;
  transform: translate(-50%,-350rpx);
  background-color: #84ccc9;
  border-radius: 5px;
  z-index: 99999;
}
.mubiao{
  margin-top: 18px;
  display: flex;
  flex-direction: row;
  width: 80%;
  font-size: 22rpx;
  border-bottom: 1px solid #333;
}
.zt{
  font-size: 22rpx;
  margin-top: 18px;
  display: flex;
  flex-direction: row;
  width: 80%;
}
.input{
  width: 70%;
  font-size: 25rpx;
}
.input3{
  width: 50%;
}
.que{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.SettingDate{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 10px;
  width: 70%;
  height: 20px;
}
.date{
  display: flex;
  align-items: center;
  width: 65px;
  height: 20px;
  background-color: #d2c1a7;
  border-radius: 5px;
}
.ShortTerm{
  width: 25px;
