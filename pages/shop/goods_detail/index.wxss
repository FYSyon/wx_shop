page{
  padding-bottom: 90rpx;
}
.tool {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  width: 100%;
  height: 90rpx;
  border-top: 2px solid #a59e9e;
  
}
.tool .tool_item {
  background-color: rgb(252, 228, 211);
  flex: 1;
  height:100%;
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.tool .tool_test {
  height: 100%;
  flex: 2;
  font-size: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e6c55a;
}
.tool .tool_test2 {
  height: 100%;
  flex: 2;
  font-size: 35rpx;
  display: flex;
  align-items: center;
  background-color: #e73d3d;
  justify-content: center;
}


/*轮播图*/
.lunpo_wid{
  width: 95vw;
  margin: auto;
}
swiper{
  width: 100%;
  height: calc(100vw*790/1124);
}
.swiper image{
  width: 100%;
  height: 100%;
}

/*下标*/
.goods{
  color: #292626;
  margin-top: 10rpx;
}
.goods_text{
  border-top: 2px solid rgb(226, 223, 223);
  font-size: 40rpx;
  padding: 10rpx;
  color: #292626;
  
}
.goods_moniy{
  color: red;
  font-weight: bold;
  font-size: 35rpx;
}
.goods_list{
  border-bottom: 2px solid rgb(226, 223, 223);
  padding-right: 20rpx;
  display: flex;
}
.goods_list text{
  flex: 3;
}
.goods_list text:nth-child(3){
  float: right;
  color: rgb(119, 113, 113);
}
.goods_list text:nth-child(2){
  float: right;
  color: rgb(119, 113, 113);

}

/*评论区*/
.comment_area{
  margin-top: 50rpx;
}
.comment_list{
  width:  100%;
  height: 300rpx;
  border-bottom: 1px solid rgb(129, 120, 120);
  border-top: 1px solid rgb(129, 120, 120);
  position: relative;
} 
.comment_text{
  padding: 10rpx;
}
.user_data{
  color: rgb(179, 179, 174);
  position: absolute;
  bottom: 0;
  right: 0;
}

.remark{
  border: 1px solid rgb(134, 131, 131);
  flex-wrap: wrap;
}


/*推荐*/
.recomed{
  width: 100%;
  height: 480rpx;
  display: flex;
  flex-wrap: wrap;  
  flex-direction: row;
  justify-content: space-between;
  
}
.reco_1{
  
  width: 32.33%;
  height: 50%;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items: center;
  box-sizing:border-box;
  
}
.reco_1 image{
  width: 90%;
  height: 100%;
  
}
.reco_text{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-left: 10rpx;
}
.reco_title{
  color: rgba(218, 210, 208, 0.916);

  font-size: 40rpx;
  text-align: center;
  padding: 10rpx;
}