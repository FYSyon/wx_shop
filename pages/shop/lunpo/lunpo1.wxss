/**图片**/
.list{
  width: 100%;
  height: 100%;
 
}
.list_flex{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.list_goods{
  width: 320rpx;
  height: 400rpx;
  margin: 0;
  padding: 0;
  border: 1px solid red;
  
}
.lg_image{
  height: 280rpx;
  border: 1px solid red;
}
.lg_image image{
  width: 100%;
  height: 100%;
}
.lg_text{
  width: 100%;
  height: 100%;
  overflow:hidden; /*这一元素要加载父元素中才有用*/
  white-space:nowrap;
  text-overflow:ellipsis;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.lg_text view:nth-child(1){
  font-size: 25rpx;
  font-weight: bold;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden; 
}
.lg_text view:nth-child(2){
  color: red;
  font-size: 24rpx;
}

.lg_text view:nth-child(3){
  font-size: 20rpx;
 color: rgb(136, 129, 129);
}

