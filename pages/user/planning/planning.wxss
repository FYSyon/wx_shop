.planning-container {
    display: flex;
    flex-direction: column;
    width: 95%;
    margin: 30rpx auto 0;
    height: auto;
    align-items: center;
}
.planning-content {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background-color: #fff;
    box-shadow: 0 0 10rpx #ddd;
    position: relative;
    margin-bottom: 40rpx;
}
.planning-content .text {
    font-size: 32rpx;
    color: #333;
    padding-left: 30rpx;
}
.planning-date {
    position: absolute;
    bottom: -25rpx;
    right: 15rpx;
    color: #666;
    font-size: 20rpx;
}

.image-plus image {
    height: 70rpx;
    width: 70rpx;
    position: fixed;
    bottom: 8%;
    right: 5%;
    opacity: 0;
}
.image-plus .img-plus-style {
    height: 70rpx;
    width: 70rpx;
    position: fixed;
    bottom: 8%;
    right: 5%;
    z-index: 100;
    opacity: 1;
}