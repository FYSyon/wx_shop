.icon-option-container {
    width: 95%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid #e7e4f7;
    position: relative;
}
.icon-option-container:last-of-type{
    border: none;
}
.option-img {
    width: 40rpx;
    height: 40rpx;
}
