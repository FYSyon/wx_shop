.option-text {
    font-size: 30rpx;
    color: #777;
    margin-left: 20rpx;
    letter-spacing: 2px;
    vertical-align: -5rpx;
}
.right {
    position: absolute;
    right: 10rpx;
    top: 0;
}
.icon-right {
    width: 35rpx;
    height: 35rpx;
