@import "../template/detail-item-template/detail-item-template.wxss";

.circle-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background-color: #fff;
    position: relative;
}

.tab {
    display: flex;
    flex-direction: row;
    width: 100%;
    font-size: 34rpx;
    justify-content: space-between;
    background-color: rgb(247, 245, 245);
    color: #666;
    z-index: 100;
}

.tab-item {
    width: 12%;
    height: 60rpx;
    line-height: 60rpx;
    margin: 10rpx;
    text-align: center;
    letter-spacing: 2px;
}

.active {
    border-bottom: 2px solid #666;
    transition: 0.3s all linear;
}

.item-add {
    width: 9%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background-color: #eee;
    color: #000;
    border-radius: 30rpx;
    font-size: 50rpx;
}

.scroll-h {
    height: 100%;
    width: 100%;

}

.video-list {
    width: 50%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    float: left;
    margin: 0 auto;
}

/*资源*/
.seek_se {
    height: 120rpx;
    border-bottom: 1px solid #eee;
    display: flex;
    position: relative;
}

.seek_se:last-of-type {
    border: none;
}

.seek_image {
    height: 100%;
    width: 12%;
    border-radius: 10%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    margin: 0 40rpx;
}

.seek_image image {
    height: 70%;
    width: 100%;
    border-radius: 10%;
}

.seek_text {
    display: flex;
    flex-direction: column;
    /*这些display：flex对块元素才有用*/
    justify-content: space-around;

}

.seek_text view:nth-child(1) {
    font-weight: bold;
    font-size: 35rpx;
}

.seek_text view:nth-child(2) {

    font-size: 25rpx;
}

.direct {
    font-size: 50rpx;
    position: absolute;
    right: 50rpx;
    bottom: 20%;
}

.direct navigator {
    padding: 10rpx;
}

.block {
    position: relative;
}

/*tat*/
.disp {
    position: absolute;
    bottom: 0;
    display: flex;
    justify-content: space-between;

}

.tar {
    height: 80rpx;
    width: 100%;
    background-color: rgb(252, 252, 252);
    position: relative;
    display: flex;
    justify-content: space-between;
    bottom: 0;

}

.tar_center {
    height: 80rpx;
    width: 80rpx;
    border: 1px solid rgb(167, 163, 163);
    border-radius: 50%;
    position: relative;
    top: -30%;
}

.tar_center view {
    color: rgb(143, 8, 8);
    font-weight: bold;
    font-size: 100rpx;
    position: absolute;
    top: -44%;
    left: 0%;

}

.tar navigator {
    width: 45%;
    position: relative;
    overflow: hidden;
    position: relative;
    background-color: rgb(252, 252, 252);
    display: flex;
    justify-content: center;
    align-items: center;
}

.tar_but {
    width: 80%;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    overflow: hidden;
    opacity: 0;
}



