@import "../template/user-comment/user-comment-template.wxss";
.video-detail-container {
    display: flex;
    flex-direction: column;
}
.detail-head-img {
    width: 100%;
    height: 500rpx;
}
.video-detail {
    display: flex;
    flex-direction: column;
    width: 95%;
    margin: 30rpx auto 25rpx;
}
.video-content {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    border-bottom: 1px solid #ddd;
}
.user-message {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 90rpx;
    align-items: center;
    position: relative;
}
.user-message image {
    width: 70rpx;
    height: 70rpx;
}
.avatar-right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 25rpx;
}
.author-name, .video-detail-title {
    font-size: 29rpx;
    color: #000;
}
.author-name {margin-bottom: 10rpx;}
.sign_in, .video-detail-date {
    font-size: 20rpx;
    color: #999;
}
.circle-img {
    position: absolute;
    top: 3rpx;
    right: 20rpx;
}
.share-img {
    margin-left: 30rpx;
}
.video-detail-title {
    margin: 30rpx;
}
.video-detail-date {
    padding: 0 0 30rpx;
}
.user-comment {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin: 30rpx auto 0;
}
.comment-num {
    font-size: 24rpx;
    color: #666;
    margin-bottom: 15rpx;
}