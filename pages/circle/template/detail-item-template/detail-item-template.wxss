.detail-item{
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    width: 99%;
    height: auto;
    border-radius: 10rpx;
}
.detail-image {
    width: 100%;
    height: 350rpx;
    position: relative;
}
.detail-image image {
    width: 100%;
    height: 350rpx;
}
.detail-image image:last-of-type{
    width: 40rpx;
    height: 35rpx;
    position: absolute;
    top: 15rpx;
    right: 15rpx;
}
.detail-image text {
    font-size: 28rpx;
    color: yellow;
    letter-spacing: 1px;
    position: absolute;
    bottom: 15rpx;
    left: 15rpx;
}
.detail-content {
    margin: 20rpx auto; 
    line-height: 1.5em; 
    width: 95%;
    height: 45rpx;
    font-size: 28rpx;
    color: #000;
    font-weight: 540;
    overflow: hidden;
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.message {
    padding-bottom:15rpx;
    margin: 0 15rpx;
    width: 95%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.avatar, .like{
    display: flex;
    flex-direction: row; 
    align-items: center;
}
.avatar image {
    width: 45rpx;
    height: 45rpx;
}
.avatar text {
    margin-left: 10rpx;
    font-size: 26rpx;
    color: #333;
}
.like image{
    margin-right: 10rpx;
    width: 35rpx;
    height: 35rpx;
}
.like text {
    font-size: 25rpx;
    color: #666;
}